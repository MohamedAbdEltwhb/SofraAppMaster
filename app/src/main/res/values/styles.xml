<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="RadioButtonCustomFont">
        <attr name="fontName" />
    </declare-styleable>

    <!-- Rating Bar Style -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGreyDark</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <!-- Progress Dialog Style -->
    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorGreyDark</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- HomeFragment TabLayout Style -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorYellow</item>
        <item name="tabIndicatorHeight">@dimen/dimension3</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorGreyDark</item>
    </style>

    <!-- For HomeFragment TabLayout Text Title -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
