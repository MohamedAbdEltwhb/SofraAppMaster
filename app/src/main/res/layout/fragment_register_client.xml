<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dimension16"
    android:layout_marginEnd="@dimen/dimension16"
    android:layout_marginStart="@dimen/dimension16"
    android:layout_marginTop="@dimen/dimension16"
    tools:context=".ui.fragment.user.client.RegisterClientFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/RegisterClient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/r_name"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="text" />

            <EditText
                android:id="@+id/RegisterClient_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/dimension8"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/hint_restaurant_Email"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_name" />

            <EditText
                android:id="@+id/RegisterClient_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/hint_phone"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_Email"
                android:inputType="phone" />

            <Spinner
                android:id="@+id/RegisterClient_City"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension45"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_white"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_Phone" />

            <Spinner
                android:id="@+id/RegisterClient_regions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension45"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_white"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_City" />

            <EditText
                android:id="@+id/RegisterClient_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension8"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/RegisterClient_Address"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_regions"
                android:inputType="text" />

            <EditText
                android:id="@+id/RegisterClient_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension8"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/password_hint"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_Address"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/RegisterClient_RePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension8"
                android:background="@drawable/rounded_corner_white"
                android:hint="@string/hint_restaurant_RePassword"
                android:layoutDirection="rtl"
                android:padding="@dimen/dimension14"
                android:textSize="@dimen/text14"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_Password" />


            <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                android:id="@+id/RegisterClient_SaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension45"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:padding="@dimen/dimension12"
                android:text="@string/continue_button"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegisterClient_RePassword" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>