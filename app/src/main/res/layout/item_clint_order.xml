<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginEnd="@dimen/dimension3"
    android:layout_marginStart="@dimen/dimension3"
    android:layout_marginTop="@dimen/dimension8"
    android:background="@drawable/shape_ad"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

            <ImageView
                android:id="@+id/orderCardImageView"
                android:layout_width="@dimen/dimension100"
                android:layout_height="@dimen/dimension100"
                android:layout_weight="0"
                android:layout_marginBottom="@dimen/dimension5"
                android:layout_marginEnd="@dimen/dimension5"
                android:layout_marginStart="@dimen/dimension5"
                android:layout_marginTop="@dimen/dimension5"
                android:background="@drawable/shape_ad" />

        <LinearLayout
            android:layout_width="@dimen/dimension0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                android:id="@+id/orderCardTVName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/r_name"
                android:paddingTop="@dimen/dimension8"
                android:paddingBottom="@dimen/dimension8"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/text14"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension0"
                android:orientation="horizontal"
                android:layout_weight="1">

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text10" />

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/orderCardTVPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text10" />

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/orderCardTVDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/text10" />

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/orderCardTVTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text10" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                android:id="@+id/orderCardTVOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="رقم الطلب"
                android:layout_centerInParent="true"
                android:textColor="@color/colorYellow"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text12" />

            <FrameLayout
                android:id="@+id/frameLayoutForText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/textView_OrderNumber_with_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="رقم الطلب"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimension16"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/text12" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/LinerCardItemButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/LikeButtonCairoRegularText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dimension3"
                    android:paddingStart="@dimen/dimension3"
                    android:paddingBottom="@dimen/dimension5"
                    android:paddingTop="@dimen/dimension5"
                    android:layout_marginEnd="@dimen/dimension2"
                    android:background="@drawable/red_button_no_pading"
                    android:drawableStart="@drawable/ic_like"
                    android:drawablePadding="@dimen/dimension2"
                    android:text="استلام"
                    android:textSize="@dimen/text10"
                    android:textColor="@color/colorWhite"/>

                <com.example.mm.sofraappmaster.ui.custom.custom_fonts.CairoRegularText
                    android:id="@+id/UnLikeButtonCairoRegularText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dimension3"
                    android:paddingStart="@dimen/dimension3"
                    android:paddingBottom="@dimen/dimension5"
                    android:paddingTop="@dimen/dimension5"
                    android:layout_marginEnd="@dimen/dimension5"
                    android:layout_marginStart="@dimen/dimension2"
                    android:background="@drawable/red_button"
                    android:drawableStart="@drawable/ic_dislike"
                    android:drawablePadding="@dimen/dimension2"
                    android:text="رفض"
                    android:textSize="@dimen/text10"
                    android:textColor="@color/colorWhite"/>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>